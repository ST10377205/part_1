@{
    ViewData["Title"] = "Submit Claim";
}

<!-- calling the header view  -->
<partial name="_LectureHeader" />

<div class="container h-100">
    <div class="claim-card">
        <div class="icon-header">
            <i class="fa fa-folder-open"></i>
            <h1>Submit Claim</h1>
        </div>
        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data" class="claim_form">
            <div class="form-row">
                <div class="form-group">
                    <input type="number" id="Sessions" name="sessions" placeholder="" min="0" required oninput="total_calculate()">
                    <label for="Sessions">Number of Sessions</label>
                    <span class="error-message" id="sessions-error"></span>
                </div>
                <div class="form-group">
                    <input type="number" id="Hours" name="hours" placeholder="" min="0" required oninput="total_calculate()">
                    <label for="Hours">Number of Hours</label>
                    <span class="error-message" id="hours-error"></span>
                </div>
                
            </div>

            <div class="form-group">
                <input type="number" id="Rate" name="rate" placeholder="" min="0" step="0.01" required oninput="total_calculate()">
                <label for="Rate">Rate Amount</label>
                <span class="error-message" id="rate-error"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <input type="text" id="faculty" name="facultyName" placeholder="" required>
                    <label for="faculty">Faculty Name</label>
                    <span class="error-message" id="faculty-error"></span>
                </div>
                <div class="form-group">
                    <input type="text" id="module" name="moduleName" placeholder="" required>
                    <label for="module">Module Name</label>
                    <span class="error-message" id="module-error"></span>
                </div>
            </div>
            
            <div class="form-group">
                <input type="file" id="documents" name="documents" placeholder="" accept=".pdf,.doc,.docx">
                <label for="documents">Upload Supporting Documents</label>
                <span class="error-message" id="documents-error"></span>
            </div>
            <button type="submit" class="btn-custom button_claim">Submit Claim</button>
        </form>
    </div>
</div>
