@model part_1.Models.claims


<!-- calling the header view  -->
<partial name="_LectureHeader" />

<div class="container h-100">
    <div class="claim-card">
        <div class="icon-header">
            <i class="fa fa-folder-open"></i>
            <h1>Submit Claim</h1>

            <div class="form-group">
                <label>@ViewBag.message</label><br />
            </div>
        </div>
        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data" class="claim_form">
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Sessions"></label>
                    <br /><br />
                    <input asp-for="Sessions" class="form-control" id="Sessions" />
                    <span asp-validation-for="Sessions" class="text-danger"></span>


                </div>
                <div class="form-group">
                    <label asp-for="Hours"></label> <br /><br />
                    <input asp-for="Hours" class="form-control" />
                    <span asp-validation-for="Hours" class="text-danger"></span>

                </div>
                
            </div>

            <div class="form-group">
                <label asp-for="Rate"></label> <br /><br />
                <input asp-for="Rate" class="form-control" id="Rate" max="500" />
                <span asp-validation-for="Rate" class="text-danger"></span>


            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Name">Faculty name</label> <br /><br />
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="NameModule">Module name</label> <br /><br />
                    <input asp-for="NameModule" class="form-control" />
                    <span asp-validation-for="NameModule" class="text-danger"></span>


                </div>

                <div class="form-group">
                    <label asp-for="TotalAmount"></label> <br /><br />
                    <input asp-for="TotalAmount" class="form-control" id="TotalAmount" readonly />


                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="SupportingDocument"></label>
                <br /><br />
                <input asp-for="SupportingDocument" type="file" class="form-control" accept=".pdf,.doc,.docx" />
                <small style="font-size: 0.9em; color: gray;">upload only if needed</small>
       

            </div>

            <button type="submit" class="btn-custom button_claim">Submit Claim</button>
        </form>


        <script>
            // Calculate total = sessions * rate
            function calculateTotal() {
                const sessions = parseFloat(document.getElementById('Sessions').value) || 0;
                const rate = parseFloat(document.getElementById('Rate').value) || 0;
                const total = sessions * rate;
                document.getElementById('TotalAmount').value = total.toFixed(2);
            }

            // Update total in real-time
            document.getElementById('Sessions').addEventListener('input', calculateTotal);
            document.getElementById('Rate').addEventListener('input', calculateTotal);
        </script>
    </div>
</div>
