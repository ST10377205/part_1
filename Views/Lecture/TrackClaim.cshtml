@model List<part_1.Models.claims>


<!-- calling the header view -->
<partial name="_LectureHeader" />

<!-- Styles for claim status colors -->
<style>


    .claim_status.approved {
        color: green;
        font-weight: bold;
    }

    .claim_status.pending {
        color: red;
        font-weight: bold;
    }

    .claim_status.other {
        color: orange;
        font-weight: bold;
    }

</style>
<div class="container h-100">
    <div class="track_claims_container">
        <h1>Track Your Claims</h1>

        <!-- Claims table -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Sessions</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th>Total Amount</th>
                    <th>Module</th>
                    <th>Faculty</th>
                    <th>Supporting Document</th>
                    <th>Status</th>
                    <th>Date Submitted</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                <!-- Check if the model contains any claims 1-->
 @if (Model != null && Model.Count > 0)
                {
                    int count = 1;
                    foreach (var claim in Model)
                    {
                        <tr>
                            <!-- Display claim details -->
                            <td data-label="No">@(count++)</td>
                            <td data-label="Sessions">@claim.Sessions</td>
                            <td data-label="Hours">@claim.Hours</td>
                            <td data-label="Rate">R @claim.Rate</td>
                            <td data-label="Total Amount">R @(claim.Sessions* claim.Hours* claim.Rate)</td>
                            <td data-label="Module">@claim.NameModule</td>
                            <td data-label="Faculty">@claim.Name</td>
                            <!-- Supporting document link -->
                            <td data-label="Supporting Document">
                                @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                                {
                                    <a href="@claim.SupportingDocumentPath" target="_blank">View</a>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td data-label="Status">
                                <span class="claim_status @(claim.ClaimStatus == "Approved" ? "approved" :
                                                                                                      claim.ClaimStatus == "Pending" ? "pending" : "other")">
                            @claim.ClaimStatus
                        </span>
                    </td>
                    <td>@claim.CreatingDate.ToString("yyyy-MM-dd")</td>


                            <td>
                        @if (claim.ClaimStatus != "Approved")
                                {
                                    <form asp-action="DeleteClaim" asp-route-id="@claim.ClaimID" method="post" style="display:inline;">
                                        <button class="tn-custom" type="submit"
                                                onclick="return confirm('Are you sure you want to delete this claim?');">
                                            Delete
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10" style="text-align:center;">No claims found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>