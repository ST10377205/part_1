@{
    ViewData["Title"] = "Reset Password";
}

<!-- calling the header view -->
<partial name="_Header" />

<div class="container h-100">
	<!-- Login Card Start -->
    <div class="login-card">
        <h1>Reset Password</h1>
        <form method="post">
            <div class="form-group">
                <input type="text" id="email" name="email" placeholder=" " required>
                <label for="username">Email</label>
                <span class="error-message" id="username-error"></span>   
            </div>
            <div class="form-group password-container">
                <input type="password" id="password" name="password" placeholder="" required>
                <label for="password">Password</label>
                <span class="password-toggle bi bi-eye-slash" data-target="password"></span>
                <span class="error-message" id="password-error"></span>
            </div>
            <div class="form-group password-container">
                <input type="password" id="confirm-password" name="confirm-password" placeholder="" required>
                <label for="confirm-password">Confirm Password</label>
                <span class="password-toggle bi bi-eye-slash" data-target="confirm-password"></span>
                <span class="error-message" id="confirm-password-error"></span>
            </div>
            <button type="submit" class="btn-custom">Reset Password</button>
        </form>
        <div class="links">   <!-- Links for navigation -->
            <p>All set ? <a href="@Url.Action("Login", "Account")"> Login</a></p>
            <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Register</a></p>
        </div>
    </div>
</div>
