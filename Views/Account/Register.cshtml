@model part_1.Models.register_users


@{
    ViewData["Title"] = "Register";
}

<!-- calling the header view -->
<partial name="_Header" />

<div class="container h-100">
    <div class="register-card">
        <h1>Register </h1>
        <!-- Display error message from the controller if any -->
        @if (ViewBag.message != null)
        {
            <div class="alert alert-danger">@ViewBag.message</div>
        }

        <!-- Registration form -->
        <form asp-action="Register" method="post">
            <!-- First Name and Last Name fields -->
            <div class="form-row">
                <div class="form-group">
                    <!-- First name input -->
                    <input asp-for="name" type="text" placeholder=" " />
                    <label asp-for="name">First Name</label>
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <!-- Last name input -->
                    <input asp-for="surname" type="text" placeholder=" " />
                    <label asp-for="surname">Last Name</label>
                    <span asp-validation-for="surname" class="text-danger"></span>
                </div>
            </div>
            <!-- Email input field -->

            <div class="form-group">
                <input asp-for="email" type="email" placeholder=" " />
                <label asp-for="email">Email</label>
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <!-- Hidden gender input (set to default 'none') -->
            <input asp-for="gender" hidden value="none" />

            <div class="form-group">
                <select asp-for="role" class="form-select">
                    <option value="" disabled selected>-- Select your role --</option>
                    <option value="lecturer">Lecturer</option>
                    <option value="programme coordinator">Program Coordinator</option>
                    <option value="programme manager">Program Manager</option>
                </select>
                <span asp-validation-for="role" class="text-danger"></span>
            </div>
            <!-- Password and Confirm Password fields -->
            <div class="form-row">
                <div class="form-group password-container">
                    <input asp-for="password" type="password" placeholder=" " />
                    <label asp-for="password">Password</label>
                    <span class="password-toggle bi bi-eye-slash" data-target="password"></span>
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group password-container">
                    <input asp-for="ConfirmPassword" type="password" placeholder=" " />
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <span class="password-toggle bi bi-eye-slash" data-target="ConfirmPassword"></span>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn-custom">Register</button>
        </form>
        <div class="links">
            <p>Already have an account? <a href="@Url.Action("Login", "Account")">Login</a></p> <!--link to loginpage-->
            <p>Forgot your password? <a href="@Url.Action("ForgotPassword", "Account")">Reset</a></p> <!--link to forget passoword takes to register -->
        </div>
    </div>
</div>