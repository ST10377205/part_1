        border: none;
        transition: all 0.3s ease;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }

    .table th {
        font-weight: 600;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        padding: 1rem 0.75rem;
    }

    .table td {
        padding: 1rem 0.75rem;
        vertical-align: middle;
    }

    .avatar-sm {
        width: 40px;
        height: 40px;
    }

